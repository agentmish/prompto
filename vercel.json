{
    "version": 2,
    "builds": [
        {
            "src": "api/mcp.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/mcp",
            "dest": "api/mcp.js"
        },
        {
            "src": "/mcp",
            "dest": "/api/mcp"
        },
        {
            "src": "/health",
            "dest": "/api/mcp"
        },
        {
            "src": "/(.*)",
            "dest": "/api/mcp"
        }
    ],
    "env": {
        "LANGSMITH_API_KEY": "@langsmith-api-key"
    },
    "functions": {
        "api/mcp.js": {
            "maxDuration": 30
        }
    }
}